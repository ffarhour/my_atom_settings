# Keybindings require three things to be fully defined: A selector that is
# matched against the focused element, the keystroke and the command to
# execute.
#
# For more detailed documentation see
# https://atom.io/docs/latest/advanced/keymaps
'atom-text-editor':
  'cmd-ctrl-r':       'run-command:run'
  'cmd-ctrl-x':       'run-command:toggle-panel'
  'cmd-ctrl-alt-x':   'run-command:kill-last-command'
  'cmd-ctrl-alt-r':   'run-command:re-run-last-command'
  'cmd-ctrl-w':       'run-command:cwd'
  'cmd-ctrl-shift-c': 'run-command:copy'
